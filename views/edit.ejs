<% layout('/layouts/boilerplate')%>
    <div class="row">
        <div class="col-7 offset-2">
            <h2>edit your listing</h2>
            <form method="post" action="/listing/<%=listings._id%>?_method=put" novalidate class="needs-validation"
                enctype="multipart/form-data">


                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%=listings.title%>" type="text" class="form-control" required>

                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" type="text" class="form-control"
                        required><%=listings.description%></textarea>
                </div>

                <div>

                    <img src="<%=  originalimage%>" alt="">
                </div>


                <div class="mb-3">
                    <label for="image" class="form-label">Upload new image</label>
                    <input name="listing[image.url]" type="file" class="form-control">
                </div>

                <div class="row">

                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">price</label>
                        <input name="listing[price]" value="<%=listings.price%>" type="number" class="form-control"
                            required>
                    </div>
                    <div class="mb-3 col-8">
                        <label for="country">Country</label>
                        <input name="listing[country]" value="<%=listings.country%>" type="text" class="form-control"
                            required>
                    </div>

                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" value="<%=listings.location%>" type="text" class="form-control"
                        required>
                </div>

                <button class="btn btn-dark edit-btn">edit</button>
            </form>

        </div>
    </div>