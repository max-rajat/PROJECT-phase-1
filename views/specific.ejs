<% layout('/layouts/boilerplate')%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Listing details</h2>
        </div>
        <div class="card col-6 offset-2 listing-card">
            <img src="<%=listings.image.url %>" class="card-img-top specific-img" alt="listing image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%=listings.title%>
                    </b><br>
                <p class="card-text"> Owned by: <%=listings.owner.username%>
                </p>
                <p class="card-text"> description: <%=listings.description%>
                </p>
                <p class="card-text"> Price/night: <%=listings.price.toLocaleString("en-IN")%></p>
                <p class="card-text"> Location: <%=listings.location%>
                </p>
                <p class="card-text">Country: <%=listings.country%>
                </p>
                </p>
            </div>
        </div>
    </div>
    <% if(currentuser && currentuser._id.equals(listings.owner._id)){%>
        <div class="btns">
            <a href="/listing/<%=listings._id%>/edit" class=" btn btn-dark col-2 offset-2 edit-btn">Edit</a>

            <form action="/listing/<%=listings._id%>/delete?_method=delete" method="post">
                <button class="btn btn-dark offset-5 dlt-btn">delete</button>
            </form>
        </div>
        <% }%>


            <hr>
            <%if(currentuser){%>
                <div class="col-8 offset-2">
                    <h5>Give a Review</h5>
                    <form action="/listings/<%=listings._id%>/review" method="post" novalidate class="needs-validation">
                             <div class="mb-3 mt-3 ml-2">
                        <fieldset class="starability-slot">
                                   <!-- <label for="rating" class="form-label">Rating</label> -->
                            <input type="radio"
                             id="no-rate"
                              class="input-no-rate"
                               name="review[rating]"
                                value="1"
                                 checked
                                aria-label="No rating." />

                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea class="form-control reviewcomment" name="review[comment]" id="comment" cols="35"
                                rows="5" required></textarea>
                            <div class="invalid-feedback">please add some comments</div>
                        </div>
                        <button class="btn btn-outline-dark">Submit</button>
                    </form>

                    <% }%>

                        <h3>All Reviews</h3>
                        <div class="row">
                            <% for(review of listings.reviews){%>
                                <div class="card col-5 mb-3 ms-2">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <%= review.author.username%>
                                        </h4>
                                        <p class="card-texrt">
                                            <%=review.comment%>
                                        </p>
                                        <p class="card-texrt">
                                            <%=review.rating%>‚≠ê
                                        </p>
                                    </div>
                                    <form class="mb-3" method="POST"
                                        action="/listings/<%=listings._id%>/review/<%=review._id%>?_method=delete">
                                        <button class="btn btn-sm btn-dark">Delete</button>
                                    </form>
                                </div>
                                <% }%>
                        </div>
                </div>